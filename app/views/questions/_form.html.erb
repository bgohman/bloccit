<%= form_for [@post, @post.questions.new] do |f| %>
      <div class="form-group">
        <%= f.label "Ask a question" %>
        <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter your question." %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>